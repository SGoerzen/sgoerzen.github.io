---
import Card from '../Card.astro'
import { Button } from '../ui/button'
import { EXPERIENCE } from '../../lib/constants'
---

<Card colSpan="md:col-span-2 lg:col-span-3"
      rowSpan="md:row-span-2 lg:row-span-2"
      title="Berufserfahrung">
  <div class="mt-2 space-y-4">
    {
      EXPERIENCE.slice(0, 4).map((exp) => (
        <div>
          <h3 class="text-lg font-semibold">{exp.position}</h3>
          <a class="text-sm text-primary" href={exp?.link ?? ''} target="_blank">
            {exp.company}
          </a>
          <p class="text-sm text-gray-600">
            {exp.start} - {exp.end}
          </p>
        </div>
      ))
    }
    <a href="/work">
      <Button variant="link" className="pl-0"> Mehr anzeigen </Button>
    </a>
  </div>
</Card>
